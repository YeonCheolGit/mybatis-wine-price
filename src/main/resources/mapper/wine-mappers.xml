<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.wine">
    <resultMap id="wineResult" type="wineDTO">
        <result property="number" column="number" />
        <result property="name" column="name" />
        <result property="origin" column="origin" />
        <result property="type" column="type" />
        <result property="alcohol" column="alcohol" />
        <result property="sweetness" column="sweetness" />
        <result property="acid" column="acid" />
        <result property="body" column="body" />
        <result property="food" column="food" />
        <result property="price" column="price" />
    </resultMap>

    <select id="selectAllWines" resultMap="wineResult">
        <![CDATA[
        select *
        from MVC.wine
        order by number;
        ]]>
    </select>

    <select id="readOneWine" resultMap="wineResult" parameterType="int">
        <![CDATA[
        select *
        from MVC.wine
        where number = #{number};
        ]]>
    </select>

    <select id="searchWineByName" resultMap="wineResult">
        select * from MVC.t_member where name like concat('%' || #{name} || '%')
    </select>

    <select id="listPaging" resultMap="wineResult">
        <![CDATA[
        select *
        from MVC.wine
        where number > 0
        order by number desc
        limit #{pageStart}, #{perPageNum};
        ]]>
    </select>
</mapper>