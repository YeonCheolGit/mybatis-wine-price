<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
    <resultMap id="memberResult" type="memberDTO">
        <result property="id" column="id" />
        <result property="pwd" column="pwd" />
        <result property="name" column="name" />
        <result property="regDate" column="regDate" />
    </resultMap>

    <select id="selectAllMembers" resultMap="memberResult">
        <![CDATA[
            select *
            from MVC.t_member
            order by regDate;
        ]]>
    </select>
    <select id="registerMember" resultMap="memberResult">
        <![CDATA[
            insert into MVC.t_member(id, pwd, name)
            VALUES (#{id}, #{pwd}, #{name});
        ]]>
    </select>
    <select id="login" resultMap="memberResult">
        <![CDATA[
        select id, pwd, name
        from MVC.t_member
        where id = #{id}
          and pwd = #{pwd};
        ]]>
    </select>
    <select id="idChk" resultType="int">
        <![CDATA[
        select COUNT(id)
        from MVC.t_member
        where id = #{id};
        ]]>
    </select>
    <update id="memberUpdate">
        <![CDATA[
        update MVC.t_member
        set name = #{name},
            pwd  = #{pwd}
        where id = #{id};
        ]]>
    </update>
</mapper>