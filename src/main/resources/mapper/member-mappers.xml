<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
    <resultMap id="memberResult" type="memberDTO">
        <result property="email" column="eamil" />
        <result property="pwd" column="pwd" />
        <result property="id" column="id" />
        <result property="regDate" column="regDate" />
    </resultMap>

    <select id="selectAllMembers" resultMap="memberResult">
        <![CDATA[
            select *
            from MVC.member
            order by regDate;
        ]]>
    </select>
    <select id="registerMember" resultMap="memberResult">
        <![CDATA[
            insert into MVC.member(eamil, pwd, id)
            VALUES (#{email}, #{pwd}, #{id});
        ]]>
    </select>
    <select id="login" resultMap="memberResult">
        <![CDATA[
        select eamil, pwd, id
        from MVC.member
        where eamil = #{email};
        ]]>
    </select>
    <select id="duplicatedIdChk" resultType="int">
        <![CDATA[
        select COUNT(eamil)
        from MVC.member
        where eamil = #{email};
        ]]>
    </select>
    <update id="memberUpdate">
        <![CDATA[
        update MVC.member
        set pwd  = #{pwd}
        where eamil = #{email};
        ]]>
    </update>
</mapper>