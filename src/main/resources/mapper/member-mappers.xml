<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.member">
    <resultMap id="memberResult" type="memberDTO">
        <result property="email" column="email" />
        <result property="pwd" column="pwd" />
        <result property="nickName" column="nickName" />
        <result property="regDate" column="regDate" />
    </resultMap>

    <select id="selectAllMembers" resultMap="memberResult">
        <![CDATA[
            select *
            from MVC.member
            order by regDate;
        ]]>
    </select>
    <!-- 회원가입 -->
    <select id="registerMember" resultMap="memberResult">
        <![CDATA[
            insert into MVC.member(email, pwd, nickName)
            VALUES (#{email}, #{pwd}, #{nickName});
        ]]>
    </select>
    <!-- 로그인 -->
    <select id="login" resultMap="memberResult">
        <![CDATA[
        select email, pwd, nickName
        from MVC.member
        where email = #{email};
        ]]>
    </select>
    <!-- 임시 비밀번호 이메일 전송 위해 id 기준으로 읽음 -->
    <select id="readMember" resultMap="memberResult">
        <![CDATA[
        select email, pwd, nickName
        from MVC.member
        where id = #{nickName};
        ]]>
    </select>
    <!-- 이메일 중복 체크 -->
    <select id="duplicatedEmailChk" resultType="int">
        <![CDATA[
        select COUNT(email)
        from MVC.member
        where email = #{email};
        ]]>
    </select>
    <!-- 아이디 중복 체크 -->
    <select id="duplicatedNickNameChk" resultType="int">
        <![CDATA[
        select COUNT(nickName)
        from MVC.member
        where nickName = #{nickName};
        ]]>
    </select>
    <!-- 회원 정보 업데이트, 비밀번호만 변경 가능 -->
    <update id="memberUpdate">
        <![CDATA[
        update MVC.member
        set pwd  = #{pwd}
        where email = #{email};
        ]]>
    </update>
</mapper>